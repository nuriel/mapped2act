<% if object.acts.present? %>
  <div class="btn-group" style="width: 100%;height: 100%">
    <button type="button" class="btn btn-success btn-block dropdown-toggle" data-toggle="dropdown">
      ACT! <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <% object.act_causes.each do |act_cause| %>
        <li><%= link_to act_cause.act.presentation, act_cause.url, target: "_blank" %></li>
      <% end %>
      <% if user_signed_in? %>
        <li><strong><%= link_to t("edit_cause_act"), cause_path(object) %></strong></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <h3><%= object.name %></h3>
  <h5><%= object.address %></h5>
